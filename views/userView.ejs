<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>Team page</title>
</head>
<body class="container" style="margin-top: 70px;">

<% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
<% } %>

<% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>

<% if (data.length) { %>
<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
            <div class="well profile">
                <div class="col-sm-12">
                    <div class="col-xs-12 col-sm-8">
                        <h2><%= data[0].team_name%></h2>
                        <h3><%= data[0].team_email%></h3>
                        <p><strong>Balance: </strong> <%= data[0].team_balance%> </p>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills w-100">
            <li class="nav-pill active">
                <a class="nav-link">Teams transaction</a>
            </li>
        </ul>
    </div>
    <div class="card-body">

        <% if(data[0].transaction_type) { %>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date</th>
                    <th scope="col">Debit</th>
                    <th scope="col">Credit</th>
                    <th width="col">Notes</th>
                    <th width="col">Author</th>
                    <th width="col">User</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i< data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].transaction_date%></td>
                        <% if (data[i].transaction_type==1){%>
                            <td></td>
                            <td><%= data[i].transaction_amount%></td>
                            <%} else{%>
                            <td><%= data[i].transaction_amount%></td>
                            <td></td>
                            <%}%>
                        <td><%= data[i].transaction_note%></td>
                        <td><%= data[i].author%></td>
                        <td><%= data[i].user_name%></td>
                    </tr>
                <% } %>
                </tbody>
            </table>

        <% } else{ %>
            <p class="text-center">No transactions found!</p>
        <% } %>

    </div>
</div>
    <% if(data[0].transaction_type){%>
<div class="container">
    <h2>Sum for users</h2>
    <!--<p>Use the .list-group-flush class to remove some borders and rounded corners:</p>-->
</div>

<div class="container">
    <ul id="sum" class="list-group list-group-flush">

    </ul>
</div>
    <%}%>
<% } else { %>
    <p class="text-center">An error occurred!</p>
<% } %>

</body>
<script>
    function calculateSum() {
        $.ajax({

            url: "/team/<%=team_id%>/sum",
            // dataType: "json", // Для использования JSON формата получаемых данных
            method: "GET", // Что бы воспользоваться POST методом, меняем данную строку на POST
           // data: {"order_id": id,"order_state": state},
            success: function(resp) {
                let data = resp.sum;
                console.log(data);
                for(let i=0; i<data.length;++i)
                {
                    let li_sum = document.createElement("li");
                    li_sum.setAttribute("class", "list-group-item");
                    var text = document.createTextNode(data[i].user_name+' = '+data[i].sum);
                    li_sum.appendChild(text);
                    document.getElementById("sum").appendChild(li_sum);
                    // location.reload();
                }

            }
        });
    }
    calculateSum();
</script>
</html>