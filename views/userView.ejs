<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>User page</title>
</head>
<body class="container" style="margin-top: 70px;">

<% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
<% } %>

<% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>

<% if (user.length) { %>
<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
            <div class="well profile">
                <div class="col-sm-12">
                    <div class="col-xs-12 col-sm-8">
                        <h2><%= user.user_name%></h2>
                        <p><strong>Balance: </strong> <%= user.user_balance%> </p>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>




<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills w-100">
            <li class="nav-pill active">
                <a class="nav-link">Users transaction</a>
            </li>
        </ul>
    </div>
    <div class="card-body">

        <% if(data.length) { %>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Transaction amount</th>
                    <th scope="col">Date</th>
                    <th width="col">Notes</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i< data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].transaction_amount%></td>
                        <td><%= data[i].transaction_date%></td>
                        <td><%= data[i].transaction_notes%></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No transactions found!</p>
        <% } %>

    </div>
</div>
<% } else { %>
    <p class="text-center">An error occurred!</p>
<% } %>

</body>
</html>