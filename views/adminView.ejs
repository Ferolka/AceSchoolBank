<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>Admin page</title>
</head>
<body class="container" style="margin-top: 70px;">

<% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
<% } %>

<% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>
<% if (data.length) { %>
    <form class="p-2" action="/admin/addMoney" method="post">
        <div class="form-group">
            <label for="user_id" class="text-dark">Aroma type id:</label>
            <select class="form-control" id="user_id" name="user_id">
                <% for(var i = 0; i < aroma.length; i++) { %>

                    <option value="<%= data[i].user_id %>"><%= data[i].user_id %>
                        Name: <%= data[i].user_name %></option>
                <% } %>
            </select>

        </div>
        <div class="form-group">
            <label>Sum:</label>
            <input type="number" min="1" step="1.0" max="100000" class="form-control" name="add_sum" aria-describedby="numberHelper" autocomplete="off" required>
            <small id="numberHelper" class="form-text text-muted">Required.</small>
        </div>
        <input type="submit" class="btn btn-info" value="Fragrances with aromas"  data-toggle="tooltip" data-placement="bottom" title="Add money for user"/>
    </form>
<% } else { %>
    <p class="text-center">No user found!</p>
<% } %>

<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills w-100">
            <li class="nav-pill active">
                <a class="nav-link">Users</a>
            </li>
            <li class="nav-pill ml-auto">
                <a class="nav-link active" href="/aroma/add">Add user?</a>
            </li>
        </ul>
    </div>
    <div class="card-body">

        <% if(data.length) { %>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">User name</th>
                    <th scope="col">Balance</th>
                    <th width="200px">Action</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i< data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].user_name%></td>
                        <td><%= data[i].user_balance%></td>
                        <td>
                            <a class="btn btn-success edit" href="../user/edit/<%=data[i].user_id%>">Edit</a>
                            <a class="btn btn-danger delete" onclick="return confirm('Are You sure?')" href="../user/delete/<%=data[i].user_id%>">Delete</a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No users found!</p>
        <% } %>

    </div>
</div>

</body>
</html>