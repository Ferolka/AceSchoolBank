<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>Admin page</title>
</head>
<body class="container" style="margin-top: 70px;">

<% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
<% } %>

<% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
<% } %>

<div class="card">
    <div class="card-header">
        <ul class="nav nav-pills w-100">
            <li class="nav-pill active">
                <a class="nav-link">Users</a>
            </li>
            <li class="nav-pill ml-auto">
                <a class="nav-link active" href="/aroma/add">Add user?</a>
            </li>
        </ul>
    </div>
    <div class="card-body">

        <% if(data.length) { %>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Team name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Balance</th>
                    <th width="200px">Action</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i< data.length; i++) { %>
                    <tr>
                        <th scope="row"><%= (i+1) %></th>
                        <td><%= data[i].team_name%></td>
                        <td><%= data[i].team_email%></td>
                        <td><%= data[i].team_balance%></td>
                        <td>
                            <a class="btn btn-success edit" href="/team/<%=data[i].team_id%>">Show</a>
                            <!--<a class="btn btn-danger delete" onclick="return confirm('Are You sure?')" href="../user/delete/<%=data[i].user_id%>">Delete</a>-->
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        <% } %>

        <!-- if result is empty -->
        <% if(!data.length) { %>
            <p class="text-center">No users found!</p>
        <% } %>

    </div>
</div>
<!--Add transaction -->
<div class="container">

    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card">
        <div class="card-header">
            Add Transaction
        </div>
        <div class="card-body">
            <form action="admin/addTransaction" method="post">
                <div class="form-group">
                    <label for="transaction_user">Transaction team:</label>
                    <select id="team" class="form-control" id="transaction_user" name="transaction_team" aria-describedby="typeIdHelper" onchange="getUsers()" required>
                        <% for(var i = 0; i< data.length; i++) { %>

                        <option value="<%=data[i].team_id%>"><%=data[i].team_id%> Name: <%=data[i].team_name%></option>
                        <%}%>
                    </select>
                    <small id="typeIdHelper" class="form-text text-muted">Required.</small>
                </div>


                <div class="form-group">
                    <label>Transaction type:</label>
                    <select class="form-control" id="transaction_type" name="transaction_type" required>
                        <option value=1>Debit</option>
                        <option value=0>Credit</option>
                        <!--<option value=null>Unknown</option>-->
                    </select>
                    <small id="typeIdHelper" class="form-text text-muted">Required.</small>
                </div>
                <div class="form-group">
                    <label>Amount:</label>
                    <input type="number" min="1" step="1" max="100000" class="form-control" aria-describedby="priceHelper" name="transaction_amount" autocomplete="off" required>
                    <small id="priceHelper" class="form-text text-muted">Required.</small>
                </div>
                <div class="form-group">
                    <label for="transaction_user">Transaction user:</label>
                    <select id="users" class="form-control" id="transaction_user" name="transaction_user" aria-describedby="typeIdHelper" >
                        <option value=null>No user</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Notes:</label>
                    <input type="text" class="form-control" name="transaction_note" autocomplete="off" required>
                    <small id="typeIdHelper" class="form-text text-muted">Required.</small>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Add"/>
                </div>
            </form>
        </div>

</div>
</div>

</body>
<script>
    function getUsers() {
        var e = document.getElementById("team");
        var team_id = e.options[e.selectedIndex].value;
        $.ajax({

            url: "admin/users/"+team_id,
            // dataType: "json", // Для использования JSON формата получаемых данных
            method: "GET", // Что бы воспользоваться POST методом, меняем данную строку на POST
            // data: {"order_id": id,"order_state": state},
            success: function(resp) {
                let data = resp.users;
                console.log(resp);
                document.getElementById("users").innerHTML = "";
                let opt = document.createElement("option");
                opt.setAttribute("value", null);
                var text = document.createTextNode("No user");
                opt.appendChild(text);
                document.getElementById("users").appendChild(opt);
                for(let i=0; i<data.length;++i)
                {
                    let opt = document.createElement("option");
                    opt.setAttribute("value", data[i].user_id);
                    var text = document.createTextNode(data[i].user_name);
                    opt.appendChild(text);
                    document.getElementById("users").appendChild(opt);
                    // location.reload();
                }

            }
        });
    }
</script>
</html>